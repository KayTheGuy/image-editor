import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JComponent;
import javax.swing.JFileChooser;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class MainWindow extends JPanel implements ActionListener {
	private JFrame mainFrame;
	private JComponent newContentPane;
	private JPanel buttonPanel;
	private JButton openButton, saveButton;
	private final JFileChooser fc;

	public MainWindow() {
		mainFrame = new JFrame("Image Editor");
		mainFrame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		mainFrame.setSize(800, 600);
		//3. Create components and put them in the frame.
		//...create emptyLabel...
//		frame.getContentPane().add(emptyLabel, BorderLayout.CENTER);
		mainFrame.setVisible(true);
		// UI components
		//Create and set up the content pane.
	    newContentPane = new MainWindow();
	    newContentPane.setOpaque(true); //content panes must be opaque
	    mainFrame.setContentPane(newContentPane);
	    
	    
		JPanel buttonPanel = new JPanel(); //use FlowLayout
		fc = new JFileChooser();
		openButton = new JButton("Select Image");
		openButton.addActionListener(this);
		buttonPanel = new JPanel();
		buttonPanel.add(openButton);
		
		
		mainFrame.getContentPane().add(openButton, null);
		mainFrame.getContentPane().add(fc, null);
		//In response to a button click:
//		int returnVal = fc.showOpenDialog(aComponent);
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		
	}
}
